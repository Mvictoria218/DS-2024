programa{
	funcao inicio(){
		escreva("Exibir números pares: \n")
		para (inteiro i = 1; i <= 100; i = i + 1){
			se (i % 2 == 0){
				escreva(i)
			}
		}
	

		escreva("\nExibir números impares: \n")
		para (inteiro i = 1; i <= 100; i = i + 1){
			se (i % 2 == 1){
				escreva(i)
			}
		}
	}
}
